<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_ffffff"

    xmlns:android="http://schemas.android.com/apk/res/android" >
    <View
        android:layout_width="fill_parent"
        android:background="@color/color_green_bg3"
        android:layout_height="10dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:id="@+id/dsc"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/base_color_text_black"
                android:gravity="center_vertical"
                android:id="@+id/course_title"
                android:text="专转本计算机技术"
                android:padding="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

            />
        </RelativeLayout>
        <View
            android:background="@color/color_green_bg3"
            android:layout_width="fill_parent"
            android:layout_height="0.70000005dip" />
        <LinearLayout
            android:orientation="horizontal"

            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="150.0dip"
                android:layout_height="97.0dip"
                android:id="@+id/image"
                android:src="@drawable/icon_tv_big"
                android:layout_marginRight="5.0dip" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip">
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/base_color_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_seniorhelp"
                    android:text="课程进度" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_seniorhelp"
                    android:id="@+id/tv_seniorhelpdsc1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_seniorhelpdsc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="已有"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                    />
                    <TextView
                        android:id="@+id/tv_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/rules_oriange_ff6600"
                        android:text="432"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                    />
                    <TextView
                        android:id="@+id/tv_seniorhelpdsc2"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="人购买"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                    />
                </LinearLayout>


                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/c_f98800"
                    android:text="Y170"
                    android:layout_marginBottom="4dip"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>