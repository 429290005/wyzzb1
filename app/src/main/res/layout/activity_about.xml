<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/color_green_bg3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/fragment_actionbar"
        layout="@layout/actionbar"
    />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_about_logo"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginTop="28.0dip"
    android:src="@drawable/ic_launcher"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="" />
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_about_intro"
        android:background="@drawable/selector_common_item_bg"
        android:paddingLeft="@dimen/rules_content_left_margin"
        android:paddingRight="@dimen/rules_content_right_margin"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rules_card_item_height"
        android:layout_marginTop="20.0dip"
        android:text="转本帮介绍"
android:visibility="gone"
        android:drawableRight="@mipmap/xuetang_right_arrow" />
    <View
        android:background="@color/rules_gray_e5e5e5"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_about_checkupdate"
        android:background="@drawable/selector_common_item_bg"
        android:paddingLeft="@dimen/rules_content_left_margin"
        android:paddingRight="@dimen/rules_content_right_margin"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rules_card_item_height"
        android:text="官方网站：www.zzb.tech"
        android:drawableRight="@mipmap/xuetang_right_arrow" />
    <View
        android:background="@color/rules_gray_e5e5e5"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_about_qrcode"
        android:background="@drawable/selector_common_item_bg"
        android:paddingLeft="@dimen/rules_content_left_margin"
        android:paddingRight="@dimen/rules_content_right_margin"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rules_card_item_height"
        android:text="二维码下载"
        android:drawableRight="@mipmap/xuetang_right_arrow" />
    <View
        android:background="@color/rules_gray_e5e5e5"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_about_follow_weibo"
        android:background="@drawable/selector_common_item_bg"
        android:paddingLeft="@dimen/rules_content_left_margin"
        android:paddingRight="@dimen/rules_content_right_margin"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rules_card_item_height"
        android:text="关注官方微博"
        android:drawableRight="@mipmap/xuetang_right_arrow" />
    <View
        android:background="@color/rules_gray_e5e5e5"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_about_weichat"
        android:background="@drawable/selector_common_item_bg"
        android:paddingLeft="@dimen/rules_content_left_margin" android:paddingRight="@dimen/rules_content_right_margin"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rules_card_item_height"
        android:text="官方微信：zzbzxkt"
        android:drawableRight="@mipmap/xuetang_right_arrow" />
    <View
        android:background="@color/rules_gray_e5e5e5"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <RelativeLayout
        android:id="@+id/rl_about_hideview"
        android:background="@drawable/selector_common_item_bg"
        android:clickable="true"

        android:layout_width="fill_parent"
        android:layout_height="@dimen/rules_card_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rules_content_left_margin"
            android:text="联系学长：18036602859"
            android:layout_centerVertical="true" />

    </RelativeLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/l_setting_logout"
        android:background="@drawable/selector_common_item_bg"
        android:paddingTop="10.0dip" android:paddingBottom="10.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rules_item_card_margin"
        android:layout_marginBottom="@dimen/rules_item_card_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出" />
    </LinearLayout>
</LinearLayout>