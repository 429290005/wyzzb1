<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#489cfa"/>
            <gradient android:startColor="#489cfa"  android:endColor="#489cfa" android:angle="270"></gradient>
            <corners android:radius="5dip"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#f0f0f0"/>
            <gradient android:startColor="#f0f0f0" android:endColor="#f0f0f0" android:angle="270"></gradient>
            <corners android:radius="5dip"/>
        </shape>
    </item>
</selector>